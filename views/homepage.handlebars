{{#each products as |product| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      
      <a href="/product/{{id}}">{{product_name}}</a>
    </h2>
    <h5>Price: ${{price}}</h5>
    <h5>Stock: {{stock}}</h5>
    <h5>Category: {{category.category_name}}</h5>
    <p>Last Updated: {{format_date updatedAt}}</p>
  </div>
  
</div>
{{/each}}
<form class="form new-comment-form">
<div class="form-group">
    <button id="csv" type="submit" class="btn btn-primary" >Download CSV</button>
</div>
</form>


 <script src="/js/download.js"></script>